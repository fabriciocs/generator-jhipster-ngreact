import React, { useState, useEffect } from 'react';
import { Link, useNavigate, useParams } from 'react-router-dom';
import { Button, Typography, Grid, Paper, TextField } from '@mui/material';
import { Translate } from 'react-jhipster';

import { useAppDispatch, useAppSelector } from 'app/config/store';
import { getEntity, updateEntity, createEntity, reset } from './admin.reducer';

export const AdminUpdate = () => {
  const dispatch = useAppDispatch();
  const navigate = useNavigate();

  const { id } = useParams<'id'>();
  const isNew = id === undefined;

  const adminEntity = useAppSelector(state => state.admin.entity);
  const loading = useAppSelector(state => state.admin.loading);
  const updating

 = useAppSelector(state => state.admin.updating);
  const updateSuccess = useAppSelector(state => state.admin.updateSuccess);

  const handleClose = () => {
    navigate('/admin');
  };

  useEffect(() => {
    if (isNew) {
      dispatch(reset());
    } else {
      dispatch(getEntity(id));
    }
  }, []);

  useEffect(() => {
    if (updateSuccess) {
      handleClose();
    }
  }, [updateSuccess]);

  const saveEntity = values => {
    const entity = {
      ...adminEntity,
      ...values,
    };

    if (isNew) {
      dispatch(createEntity(entity));
    } else {
      dispatch(updateEntity(entity));
    }
  };

  return (
    <Paper style={{ padding: 16 }}>
      <Typography variant="h6" gutterBottom>
        <Translate contentKey="admin.home.createOrEditLabel">Create or edit an Admin</Translate>
      </Typography>
      {loading ? (
        <Typography variant="body1">Loading...</Typography>
      ) : (
        <form onSubmit={saveEntity}>
          <Grid container spacing={3}>
            {!isNew && (
              <Grid item xs={12}>
                <TextField
                  name="id"
                  label={<Translate contentKey="global.field.id">ID</Translate>}
                  value={adminEntity.id}
                  InputProps={{
                    readOnly: true,
                  }}
                  fullWidth
                />
              </Grid>
            )}
            <Grid item xs={12}>
              <TextField
                required
                name="username"
                label={<Translate contentKey="admin.username">Username</Translate>}
                value={adminEntity.username || ''}
                fullWidth
              />
            </Grid>
            <Grid item xs={12}>
              <TextField
                required
                name="email"
                label={<Translate contentKey="admin.email">Email</Translate>}
                value={adminEntity.email || ''}
                fullWidth
              />
            </Grid>
            <Grid item xs={12}>
              <Button variant="contained" color="primary" type="submit" disabled={updating}>
                <Translate contentKey="entity.action.save">Save</Translate>
              </Button>
              &nbsp;
              <Button variant="contained" color="secondary" onClick={handleClose}>
                <Translate contentKey="entity.action.cancel">Cancel</Translate>
              </Button>
            </Grid>
          </Grid>
        </form>
      )}
    </Paper>
  );
};

export default AdminUpdate;
