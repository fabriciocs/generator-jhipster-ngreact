import React from 'react';
import { useForm } from 'react-hook-form';
import { Button, TextField, Grid, Paper, Typography } from '@mui/material';
import { Translate } from 'react-jhipster';

const ValidatedForm = ({ defaultValues, onSubmit }) => {
  const { register, handleSubmit, formState: { errors } } = useForm({ defaultValues });

  return (
    <Paper style={{ padding: 16 }}>
      <Typography variant="h6" gutterBottom>
        <Translate contentKey="global.form.createOrEditLabel">Create or edit an entity</Translate>
      </Typography>
      <form onSubmit={handleSubmit(onSubmit)}>
        <Grid container spacing={3}>
          <Grid item xs={12}>
            <TextField
              required
              id="name"
              name="name"
              label={<Translate contentKey="global.field.name">Name</Translate>}
              fullWidth
              {...register('name', { required: true })}
              error={!!errors.name}
              helperText={errors.name && <Translate contentKey="global.messages.validate.required">This field is required.</Translate>}
            />
          </Grid>
          <Grid item xs={12}>
            <TextField
              id="description"
              name="description"
              label={<Translate contentKey="global.field.description">Description</Translate>}
              fullWidth
              {...register('description')}
            />
          </Grid>
          <Grid item xs={12}>
            <Button type="submit" variant="contained" color="primary">
              <Translate contentKey="entity.action.save">Save</Translate>
            </Button>
          </Grid>
        </Grid>
      </form>
    </Paper>
  );
};

export default ValidatedForm;
